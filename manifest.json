{
  "manifest_version": 2,

  "name": "FNG Server Status Plugin",
  "description": "This extension allows the user to show the status of the FearNixx Gaming services",
  "version": "0.1.4",

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "FNG Server Status"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/bg.js","js/popup.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*.fearnixx.de/", "https://*.fearnixx.de/"
  ],
  "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens popup.html"
      }
    }
}
