{
  "manifest_version": 2,

  "name": "FNG Server Status Plugin",
  "description": "This extension allows the user to show the status of the FearNixx Gaming services",
  "version": "1.0",
  

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "FNG Server Status"
  },
  "background": {
    "persistent": false,
    "scripts": ["scripts/bg.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*.fearnixx.de/", "https://*.fearnixx.de/"
  ],
  "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+F",
          "mac": "MacCtrl+Shift+F"
        },
        "description": "Opens popup.html"
      }
    }
}
