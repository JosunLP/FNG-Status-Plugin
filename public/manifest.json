{
    "name": "FNG Status Plugin",
    "version": "0.2.0",
    "manifest_version": 2,
    "description": "This extension was created with the awesome extensionizr.com",
    "homepage_url": "http://fearnixx.de",
    "content_scripts": [{
        "css": [
            "css/style.css"
        ],
        "js": [
            "js/page.js"
        ],
        "matches": [
            "https://fearnixx.de/"
        ]
    }],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": [
            "src/bg/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_title": "FNG Status Plugin",
        "default_popup": "popup.html"
    },
    "permissions": [
        "bookmarks",
        "chrome://favicon/",
        "clipboardRead",
        "clipboardWrite",
        "contentSettings",
        "contextMenus",
        "cookies",
        "tabs",
        "geolocation",
        "https://fearnixx.de/*"
    ],
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens popup.html"
        }
    }
}